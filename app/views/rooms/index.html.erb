<div class="row">
  <div class="col-md-2">
    <h5> Hi <%= @current_user.username %> </h5>
    <h4> Users </h4>
    <div>
      <%= turbo_stream_from "users" %>
      <div id="users">
        <%= render @users %>
      </div>
    </div>
    <h4> Rooms </h4>
    <%= render partial: "layouts/new_room_form" %>
    <div>
      <%= turbo_stream_from "rooms" %>
      <div id="rooms">
        <%= render @rooms %>
      </div>
    </div>
    <%= link_to 'Sign Out', signout_path,  :method => :delete %>
  </div>
  <div class="col bg-dark">
    <div class = "row">
      <div class="col bg-dark text-light">
        <h4 class="text-center"> <%= @user&.username || (@single_room&.name || "Room Name") %></h4>
      </div>
    </div>

    <div class = "row">
      <div class="col bg-dark text-light">
        <%= turbo_stream_from @single_room %>
        <div id="messages">
          <% if @messages %>
            <%= render @messages %>
          <% end %>
        </div>
      </div>
    </div>

    <div class = "row">
      <div class="col-md-10 bg-dark text-light"> </div>
        <%= render partial: 'layouts/new_message_form' %>
      </div>
    </div>
  </div>
</div>
