<!-- app/views/users/new.html.erb -->

<h1>Create a new user</h1>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit 'Create User' %>
  </div>
<% end %>

<%= link_to 'Back', users_path %>
